<%- layout("layout/boilerplat.ejs") %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #f8f8f8;
  }
  .admin-dashboard h2 {
    color: #2c3e50;
    margin-bottom: 10px;
  }
  .admin-dashboard a {
    display: inline-block;
    background-color: #3498db;
    color: white;
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 5px;
    margin-bottom: 20px;
    transition: background-color 0.2s ease-in-out;
  }
  .admin-dashboard a:hover {
    background-color: #2980b9;
  }
  .admin-dashboard table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    border-radius: 8px;
    overflow: hidden;
  }

  .admin-dashboard th,
  .admin-dashboard td {
    padding: 12px 16px;
    border-bottom: 1px solid #ddd;
    text-align: left;
  }

  .admin-dashboard th {
    background-color: #2c3e50;
    color: white;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 1px;
  }

  .admin-dashboard tr:hover {
    background-color: #f1f1f1;
  }

  .admin-dashboard select,
  .admin-dashboard button {
    padding: 6px 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
  }

  .admin-dashboard button {
    background-color: #27ae60;
    color: white;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }

  .admin-dashboard button:hover {
    background-color: #1e8449;
  }
</style>
<div class="admin-dashboard">
  <h2>Admin Dashboard</h2>
  <a href="/admin/menu">Manage Menu</a>

  <h3>Orders</h3>
  <table>
    <tr>
      <th>Table</th>
      <th>Items</th>
      <th>Total</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    <% orders.forEach(order => { %>
    <tr>
      <td>Table <%= order.table.tableNumber %></td>
      <td>
        <% order.items.forEach(item => { %> <%= item.food.name %> x <%=
        item.quantity %><br />
        <% }); %>
      </td>
      <td>â‚¹<%= order.totalAmount %></td>
      <td><%= order.orderStatus %></td>
      <td>
        <form action="/admin/order/<%= order._id %>/status" method="POST">
          <select name="status">
            <option value="pending">Pending</option>
            <option value="in progress">in progress</option>
            <option value="completed">Completed</option>
          </select>
          <button type="submit">Update</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </table>
</div>
